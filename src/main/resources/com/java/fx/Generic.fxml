<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>

<ScrollPane fx:id="scro" fitToWidth="true"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.CatDetailController">
    <content>
        <AnchorPane fx:id="AnchorGeneric"
                    style="-fx-background-image: url('/assets/Banner_adopt.jpg');
                           -fx-background-size: cover;
                           -fx-background-position: center;"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <!-- GridPane principal con márgenes reducidos -->
            <GridPane hgap="4" vgap="4" alignment="TOP_CENTER"
                      AnchorPane.topAnchor="4" AnchorPane.leftAnchor="4"
                      AnchorPane.rightAnchor="4" AnchorPane.bottomAnchor="4"
                      style="-fx-background-color: rgba(255,255,255,0.8); -fx-padding: 8; -fx-background-radius: 8;">
                <!-- Una sola columna para todo el contenido -->
                <columnConstraints>
                    <ColumnConstraints percentWidth="100" />
                </columnConstraints>

                <!-- Filas ajustadas -->
                <rowConstraints>
                    <RowConstraints percentHeight="8" />    <!-- Nombre -->
                    <RowConstraints percentHeight="60" minHeight="300" />   <!-- Multimedia (aumentado) -->
                    <RowConstraints percentHeight="10" />   <!-- Personalidad -->
                    <RowConstraints percentHeight="12" />   <!-- Detalles -->
                    <RowConstraints percentHeight="8" />    <!-- Botones -->
                </rowConstraints>

                <!-- Fila 0: Nombre del gato (aumentado 40%) -->
                <Label fx:id="catNameLabel" style="-fx-font-size: 25px; -fx-font-weight: bold;"
                       GridPane.halignment="CENTER" GridPane.rowIndex="0"/>

                <!-- Fila 1: Elementos multimedia en horizontal (aumentado 40%) -->
                <HBox spacing="6" alignment="CENTER" GridPane.rowIndex="1">
                    <!-- Imágenes aumentadas 40% -->
                    <ImageView fx:id="catImage1" fitWidth="340" fitHeight="252" preserveRatio="true" pickOnBounds="true" />
                    <ImageView fx:id="catImage2" fitWidth="340" fitHeight="252" preserveRatio="true" pickOnBounds="true" />
                    <ImageView fx:id="catImage3" fitWidth="340" fitHeight="252" preserveRatio="true" pickOnBounds="true" />

                    <StackPane fx:id="videoContainer">
                        <MediaView fx:id="catVideo" fitWidth="340" fitHeight="252" />
                        <ImageView fx:id="playPauseOverlay"
                                   fitWidth="340" fitHeight="252"
                                   preserveRatio="true"
                                   pickOnBounds="true"
                                   style="-fx-cursor: hand;" />
                    </StackPane>
                </HBox>

                <!-- Fila 2: Personalidad (aumentado 40%) -->
                <VBox spacing="3" GridPane.rowIndex="2" style="-fx-padding: 4 8 4 8;">
                    <Label text="Personality:" style="-fx-font-weight: bold; -fx-font-size: 18px;"/>
                    <Label fx:id="personality1Label" style="-fx-font-size: 18px;" wrapText="true" />
                    <Label fx:id="personality2Label" style="-fx-font-size: 18px;" wrapText="true" />
                </VBox>

                <!-- Fila 3: Contenedor principal para detalles (aumentado 40%) -->
                <GridPane GridPane.rowIndex="3" hgap="8" vgap="3">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="60" /> <!-- Espacio vacío izquierda -->
                        <ColumnConstraints percentWidth="40" /> <!-- Columna detalles derecha -->
                    </columnConstraints>

                    <!-- Columna derecha: Todos los detalles (aumentado 40%) -->
                    <VBox spacing="3" GridPane.columnIndex="1">
                        <Label fx:id="breedLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="ageLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="sexLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="heightLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="widthLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="colorLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="bornDateLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="friendlyKidsLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="friendlyAnimalsLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="statusLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="ongLabel" style="-fx-font-size: 17px;"/>
                        <Label fx:id="locationLabel" style="-fx-font-size: 17px;"/>
                    </VBox>
                </GridPane>

                <!-- Fila 4: Botones (aumentado 40%) -->
                <HBox spacing="20" alignment="CENTER" GridPane.rowIndex="4">
                    <Button fx:id="returnButton" text="%returnButton" prefWidth="170" prefHeight="38"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 17px;"/>
                    <Button fx:id="adoptButton" text="%adoptButton" prefWidth="170" prefHeight="38"
                            style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 17px;"/>
                </HBox>
            </GridPane>
        </AnchorPane>
    </content>
</ScrollPane>



