<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="AnchorConditions" prefHeight="700.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.UsuarioController"
            resources="@com/java/fx/Messages">
   <children>
      <!-- Texto de condiciones traducible -->
      <Label fx:id="theconditions"
             layoutX="193.0" layoutY="99.0"
             text="%theconditions" />

      <!-- Checkbox para aceptar -->
      <CheckBox fx:id="accept" layoutX="371.0" layoutY="600.0" text="%accept.text" />


      <!-- Botón para no aceptar y volver al menú -->
      <Button fx:id="notaccept"
              layoutX="151.0" layoutY="600.0"
              mnemonicParsing="false"
              onMouseClicked="#handleMenu"
              text="%notaccept" />

      <!-- Botón para continuar, deshabilitado hasta aceptar -->
      <Button fx:id="aceptbutton"
              layoutX="376.0" layoutY="648.0"
              mnemonicParsing="false"
              onMouseClicked="#handleAdopt"
              text="%aceptbutton"
              disable="true"
              style="-fx-opacity: 0.7; -fx-cursor: default;" />
   </children>
</AnchorPane>

