<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorweb2" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.UsuarioController"
            stylesheets="@styles.css">

    <BorderPane AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- Top: Barra de búsqueda -->
        <top>
            <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
                <TextField fx:id="searchField"
                           promptText="%search.prompt"
                           styleClass="modern-textfield"
                           minWidth="200"/>
                <Button fx:id="searchButton"
                        onMouseClicked="#handleSearchBreed"
                        text="%search.button"
                        styleClass="modern-button"
                        minWidth="80"/>
            </HBox>
        </top>

        <!-- Center: Lista de gatos -->
        <center>
            <ScrollPane fx:id="scrol"
                        fitToWidth="true" fitToHeight="true"
                        hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                <content>
                    <VBox fx:id="catsContainer"
                          spacing="20"
                          style="-fx-background-color: white; -fx-padding: 20;"/>
                </content>
            </ScrollPane>
        </center>

        <!-- Bottom: Botones de navegación -->
        <bottom>
            <HBox fx:id="buttonContainer"
                  spacing="10" alignment="CENTER"
                  style="-fx-background-color: #f0f0f0; -fx-padding: 10;"
                  prefHeight="60">

                <Button fx:id="goToLoginButton"
                        onMouseClicked="#handleGoToLogin"
                        text="%goToLoginButton"
                        styleClass="modern-button"
                        visible="false"
                        managed="false"
                        prefWidth="100"/>

                <Button fx:id="previouspage"
                        onMouseClicked="#handlePreviousPage"
                        text="%previouspage"
                        styleClass="modern-button"
                        minWidth="100"/>

                <Button fx:id="adopt"
                        onMouseClicked="#handleAdopt"
                        text="%adopt"
                        styleClass="modern-button"
                        minWidth="80"/>

                <Button fx:id="reviewsButton"
                        onMouseClicked="#handleReviews"
                        text="%reviews.button"
                        styleClass="modern-button"
                        minWidth="80"/>

                <Button fx:id="nextpage"
                        onMouseClicked="#handleNextPage"
                        text="%nextpage"
                        styleClass="modern-button"
                        minWidth="100"/>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>