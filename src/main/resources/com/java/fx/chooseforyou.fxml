<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cats.cats.UsuarioController"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-padding: 20;">

    <VBox spacing="15" alignment="TOP_CENTER">
        <Label text="%chooseForYou.title" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <Label text="%chooseForYou.subtitle" style="-fx-font-size: 14;"/>

        <!-- TamaÃ±o preferido -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="%chooseForYou.size" style="-fx-min-width: 250;"/>
            <ComboBox fx:id="sizeComboBox" style="-fx-min-width: 200;"/>
        </HBox>

        <!-- Raza preferida -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="%chooseForYou.breed" style="-fx-min-width: 250;"/>
            <TextField fx:id="breedField" style="-fx-min-width: 200;"/>
        </HBox>

        <!-- Origen preferido -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="%chooseForYou.origin" style="-fx-min-width: 250;"/>
            <ComboBox fx:id="originComboBox" style="-fx-min-width: 200;"/>
        </HBox>

        <!-- Acepta heridas/discapacidades -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="%chooseForYou.acceptDisabled" style="-fx-min-width: 250;"/>
            <CheckBox fx:id="acceptsDisabledCheckBox"/>
        </HBox>

        <!-- Edad preferida -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="%chooseForYou.age" style="-fx-min-width: 250;"/>
            <ComboBox fx:id="ageComboBox" style="-fx-min-width: 200;"/>
        </HBox>

        <!-- Botones -->
        <HBox spacing="20" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="submitPreferencesButton"
                    text="%submit"
                    onAction="#handleSubmitPreferences"
                    styleClass="modern-button"/>

            <Button fx:id="cancelPreferencesButton"
                    text="%cancel"
                    onAction="#handleCancelPreferences"
                    styleClass="modern-button"/>
        </HBox>
    </VBox>
</AnchorPane>
