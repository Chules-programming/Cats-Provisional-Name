<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane fx:id="anchorweb2" prefHeight="750.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.UsuarioController">
    <children>
        <!-- ScrollPane para mostrar la lista de gatos -->
        <ScrollPane fx:id="scrol"
                    layoutX="0.0" layoutY="0.0"
                    prefWidth="600.0" prefHeight="650.0"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    fitToWidth="true">
            <content>
                <AnchorPane fx:id="anchorweb3" prefWidth="600.0">
                    <children>
                        <VBox fx:id="catsContainer"
                              layoutX="0.0" layoutY="0.0"
                              spacing="20.0"
                              style="-fx-background-color: white; -fx-padding: 20;" />
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>

        <!-- Contenedor de botones en la parte inferior -->
        <HBox fx:id="buttonContainer"
              layoutX="0.0" layoutY="650.0"
              prefWidth="600.0" prefHeight="100.0"
              alignment="CENTER"
              spacing="20"
              style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <!-- Bot칩n para ir a login, solo visible en primera p치gina -->
            <Button fx:id="goToLoginButton"
                    onMouseClicked="#handleGoToLogin"
                    text="%goToLoginButton"
                    visible="false"
                    managed="false" />

            <!-- Botones de paginaci칩n y adopci칩n -->
            <Button fx:id="previouspage"
                    onMouseClicked="#handlePreviousPage"
                    text="%previouspage" />
            <Button fx:id="adopt"
                    onMouseClicked="#handleAdopt"
                    text="%adopt" />
            <Button fx:id="nextpage"
                    onMouseClicked="#handleNextPage"
                    text="%nextpage" />

            <!-- Nuevo buscador por raza -->
            <TextField fx:id="searchField" promptText="%search.prompt" prefWidth="150.0" />
            <Button fx:id="searchButton" onMouseClicked="#handleSearchBreed" text="%search.button" />
        </HBox>
    </children>
</AnchorPane>



