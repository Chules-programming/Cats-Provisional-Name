<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane fx:id="anchorBreedSearch" prefHeight="750.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.UsuarioController">
    <children>
        <ScrollPane fx:id="scrol"
                    layoutX="0.0" layoutY="0.0"
                    prefWidth="600.0" prefHeight="650.0"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    fitToWidth="true">
            <content>
                <AnchorPane prefWidth="600.0">
                    <children>
                        <VBox fx:id="searchResultsContainer"
                              layoutX="0.0" layoutY="0.0"
                              spacing="20.0"
                              style="-fx-background-color: white; -fx-padding: 20;" />
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>

        <HBox layoutX="0.0" layoutY="650.0"
              prefWidth="600.0" prefHeight="100.0"
              alignment="CENTER"
              spacing="20"
              style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Button onMouseClicked="#handleBackFromSearch" text="%back.button" />
        </HBox>
    </children>
</AnchorPane>
