<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="AnchorRegister" prefHeight="600.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.UsuarioController"
            resources="@com/java/fx/Messages">
   <children>
      <Label fx:id="tituloregister" layoutX="234.0" layoutY="68.0" text="%tituloregister">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <Label fx:id="addusername" layoutX="83.0" layoutY="205.0" text="%addusername" />
      <TextField fx:id="fieldRegisterUsername" layoutX="200.0" layoutY="201.0" />
      <Label fx:id="warningUsername" layoutX="200.0" layoutY="230.0" text="%warningUsername" textFill="red" visible="false" />

      <Label fx:id="addage" layoutX="89.0" layoutY="246.0" text="%addage" />
      <TextField fx:id="fieldRegisterAge" layoutX="200.0" layoutY="242.0" />
      <Label fx:id="warningAge" layoutX="200.0" layoutY="271.0" text="%warningAge" textFill="red" visible="false" />

      <Label fx:id="addemail" layoutX="84.0" layoutY="291.0" text="%addemail" />
      <TextField fx:id="fieldRegisterEmail" layoutX="200.0" layoutY="287.0" />
      <Label fx:id="warningEmail" layoutX="200.0" layoutY="316.0" text="%warningEmail" textFill="red" visible="false" />

      <Label fx:id="addpassword" layoutX="83.0" layoutY="337.0" text="%addpassword" />
      <PasswordField fx:id="fieldRegisterPassword" layoutX="200.0" layoutY="333.0" />
      <Label fx:id="warningPassword" layoutX="200.0" layoutY="362.0" text="%warningPassword" textFill="red" visible="false" />

      <Label fx:id="warning2" layoutX="210.0" layoutY="139.0" text="%warning2" textFill="red" visible="false" />
      <Label fx:id="warning3" layoutX="413.0" layoutY="247.0" text="%warning3" textFill="red" visible="false" />

      <Button fx:id="registeruser"
              layoutX="248.0" layoutY="425.0"
              text="%registeruser"
              mnemonicParsing="false"
              onMouseClicked="#handleRegisterUser" />

      <Button fx:id="back"
              layoutX="14.0" layoutY="14.0"
              text="%goback"
              mnemonicParsing="false"
              onMouseClicked="#handleMenu" />
   </children>
</AnchorPane>

