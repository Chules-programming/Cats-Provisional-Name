<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="AnchorRecover" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.UsuarioController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="%recoverAccount.title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="300"/>
            </columnConstraints>

            <children>
                <!-- Usar %email en lugar de "email" -->
                <Label text="%email" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="recoverEmail" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Usar %lastPassword en lugar de "lastPassword" -->
                <Label text="%lastPassword" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="recoverPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Usar %age en lugar de "age" -->
                <Label text="%age" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="recoverAge" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <Label fx:id="recoverMessage" textFill="GREEN" visible="false"/>

        <HBox spacing="20" alignment="CENTER">
            <Button text="%back" onMouseClicked="#handleBackFromRecover" prefWidth="100"/>
            <Button text="%submit" onMouseClicked="#handleRecoverAccount" prefWidth="100"/>
        </HBox>
    </VBox>
</AnchorPane>
