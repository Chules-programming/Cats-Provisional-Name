<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="AnchorRegister" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.UsuarioController">

   <VBox alignment="CENTER" spacing="15"
         AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
         AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="60">
      <Label fx:id="tituloregister" text="%tituloregister" style="-fx-font-size: 24px;"/>

      <GridPane hgap="10" vgap="10" alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" halignment="RIGHT" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS" prefWidth="250"/>
         </columnConstraints>

         <children>
            <Label text="%addusername" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="fieldRegisterUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label fx:id="warningUsername" textFill="red" visible="false"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="%addage" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="fieldRegisterAge" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label fx:id="warningAge" textFill="red" visible="false"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="%addemail" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="fieldRegisterEmail" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Label fx:id="warningEmail" textFill="red" visible="false"
                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="%addpassword" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <PasswordField fx:id="fieldRegisterPassword" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            <Label fx:id="warningPassword" textFill="red" visible="false"
                   GridPane.rowIndex="7" GridPane.columnIndex="1"/>
         </children>
      </GridPane>

      <Label fx:id="warning2" textFill="red" visible="false"/>
      <Label fx:id="warning3" textFill="red" visible="false"/>

      <Button fx:id="registeruser" text="%registeruser" onMouseClicked="#handleRegisterUser" prefWidth="150"/>
   </VBox>

   <!-- BotÃ³n de volver en la esquina superior izquierda -->
   <Button fx:id="back" text="%goback" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
           onMouseClicked="#handleMenu" prefWidth="80"/>
</AnchorPane>

