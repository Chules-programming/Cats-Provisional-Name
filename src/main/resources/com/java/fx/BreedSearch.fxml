<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorBreedSearch" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cats.cats.UsuarioController">

    <ScrollPane fx:id="scrol" fitToWidth="true" fitToHeight="true"
                AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="60">
        <content>
            <VBox fx:id="searchResultsContainer" spacing="20"
                  style="-fx-padding: 20; -fx-background-color: white;"/>
        </content>
    </ScrollPane>

    <HBox alignment="CENTER" spacing="20"
          AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Button text="%back.button" onMouseClicked="#handleBackFromSearch" prefWidth="100"/>
    </HBox>
</AnchorPane>
